<Window x:Class="ResearchProject.ControlPanelWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ResearchProject"
        mc:Ignorable="d"
        Title="Панель управления"
        ResizeMode="NoResize"
        Width="360"
        Style="{StaticResource DefaultFontStyle}">
    <StackPanel Margin="10">
        <StackPanel Orientation="Horizontal">
            <TextBlock Text="№ текущего поколения:"
                        Margin="0,0,0,5"
                        VerticalAlignment="Center"/>
            <TextBlock Text="{Binding CurrentGenerationNumber}"
                        FontWeight="Bold"/>
        </StackPanel>
        
        <Button x:Name="ButtonBeginStopEvolutionProcess"
                Padding="2.5">
            <Button.Style>
                <Style TargetType="Button">
                    <Style.Triggers>
                        <!--<DataTrigger Binding="{Binding }" Value="False">
                            <Setter Property="IsEnabled" Value="True"/>
                        </DataTrigger>-->
                    </Style.Triggers>
                </Style>
            </Button.Style>
        </Button>
    </StackPanel>
</Window>
